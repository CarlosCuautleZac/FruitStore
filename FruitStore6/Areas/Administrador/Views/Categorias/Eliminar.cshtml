@model FruitStore6.Models.Categoria
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_LayoutAdmin";
}

<form method="post" action="~/Administrador/Categorias/Eliminar">
    <div>
        <h1>Eliminar Categoría</h1>

        <input type="hidden" id="id" asp-for="Id" />

        <p>¿Está seguro de eliminar la categoría "<span id="nombreCategoria">@Model.Nombre</span>"?</p>

        <div class="botones">
            <p id="error">
                @Html.ValidationSummary()
            </p>
            <input type="submit" value="Si" id="btnSi" />
            <a href="~/Administrador/Categorias">
                <input type="button" value="No" id="btnNo" formnovalidate="formnovalidate" />
            </a>
        </div>
    </div>
</form>
