@model FruitStore6.Models.Categoria
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_LayoutAdmin";
}

<form method="post" action="~/Administrador/Categorias/Agregar">
    <div>
        <h1>Agregar Categoría</h1>

        <label>Nombre:</label>
        <input asp-for="Nombre" type="text" id="txtNombre" required="required" />

        <div class="botones">
            <p id="error">
                @Html.ValidationSummary()
            </p>
            <input type="submit" value="Agregar" id="btnAgregar" />
            <input type="button" value="Cancelar" id="btnCancelar" formnovalidate="formnovalidate" />
        </div>
    </div>
</form>
