@using FruitStore6.Services
@inject MenuService menu
<html>
<head>
    <title>FruitStore - La mejor fruteria de la Web</title>
    <link href="~/styles.css" rel="stylesheet" />
</head>
<body>
    <header></header>
    <nav>
        <a href="~/Home">Principal</a>
        
        @foreach(var item in menu.Get()){
           <a href="~/c/@item.Nombre">@item.Nombre</a>
        }

        
    </nav>
    <main>
        @RenderBody()
    </main>
</body>
</html>
